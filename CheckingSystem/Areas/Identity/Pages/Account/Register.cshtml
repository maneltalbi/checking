@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="card">
    <div class="card-body text-center">
        <div class="mb-4">
            <i class="feather icon-user-plus auth-icon"></i>
        </div>
        <h3 class="mb-4">Sign up</h3>
        <form  asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="input-group mb-3">
                <input asp-for="Input.Email" class="form-control" type="text" placeholder="Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>

            </div>
            <div class="input-group mb-4">
                <input asp-for="Input.Password" class="form-control" type="password" placeholder="password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="input-group mb-4">

                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="password">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            </div>
            <div class="form-group text-left">
                <div class="checkbox checkbox-fill d-inline">
                    <input type="checkbox" name="checkbox-fill-1" id="checkbox-fill-1" checked="">
                    <label for="checkbox-fill-1" class="cr"> Save Details</label>
                </div>
            </div>
           
            <button type="submit" class="btn btn-primary shadow-2 mb-4">Sign Up</button>
          
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
