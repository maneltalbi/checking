@model CheckingSystem1.Models.SubCategories

@{ ViewData["Title"] = "Create";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<br />
<br />
<div class="span10">
    <h1 align="center">Create</h1>

    <h4 align="center">SubCategories</h4>
    <hr />
    <div class="span10">
        <div class="row" align="center">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <select asp-for="IdCat" class="form-control" asp-items="ViewBag.IdCat"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group" align="center">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-inverse">Back to List</a>

                    </div>
                </form>
            </div>
        </div>


    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
