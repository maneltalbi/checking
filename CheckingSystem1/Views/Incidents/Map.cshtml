<script src="~/scripts/jquery-3.2.1.min.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBzfyTgMdy0mW8mC-vAYeeSZmv80wbrF68&callback=initMap&v=weekly"
        async></script>
<style>
    /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
    #map {
        height: 600px;
        width: 100%;
    }
</style>
<div class="span10">
    <div id="map"></div>

</div>

<script>
    let map;

    function initMap() {
        map = new google.maps.Map(document.getElementById("map"), {
            center: { lat: 35.829300, lng: 10.640630 },
            zoom: 8,
        });
        var markersousse = new google.maps.Marker({
            position: { lat: 35.829300, lng: 10.640630 },
            map: map,
        });

        var contentStringsousse =
            '<div id="content">' +
            '<div id="siteNotice">' +
            "</div>" +
            '<h1 id="firstHeading" class="firstHeading">Sousse</h1>' +
            '<div id="bodyContent">' +
            "<p><b>Sousse</b>, also referred to as <b>Ayers Rock</b>, is a large " +
            "sandstone rock formation in the southern part of the " +
            "Northern Territory, central Australia. It lies 335&#160;km (208&#160;mi) " +
            "south west of the nearest large town, Alice Springs; 450&#160;km ";
        const infowindowsousse = new google.maps.InfoWindow({
            content: contentStringsousse,
        });
        markersousse.addListener("mouseover", () => {
            infowindowsousse.open(map, markersousse);
                
        });
        markersousse.addListener("mouseout", () => {
            infowindowsousse.close();

        });
    }

</script>
