
@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}



<div class="card">
    <div class="card-body text-center">
            <div class="mb-4">
               <i class="feather icon-unlock auth-icon"></i>
            </div>
               <h3 class="mb-4">Login</h3>
         <form id="account"  method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

               <div class="input-group mb-3">
                <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
               </div>
              <div class="input-group mb-4">
                <input asp-for="Input.Password" class="form-control" type="password" placeholder="password">
              </div>
 
              
               <div class="form-group text-left">
                 <div class="checkbox checkbox-fill d-inline">
                    <input type="checkbox" name="checkbox-fill-1" id="checkbox-fill-a1" checked="">
                   <label for="checkbox-fill-a1" class="cr"> Save Details</label>
                 </div>
               </div>
        <center>
            <button type="submit" class="btn btn-primary shadow-2 mb-4 w-25">Login</button>

            <p class="mb-2 text-muted">Forgot password? <a id="forgot-password" asp-page="./ForgotPassword">Reset</a></p>
            <p class="mb-0 text-muted">Don’t have an account?  <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Signup</a></p>
        </center>
        </form>
    </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}