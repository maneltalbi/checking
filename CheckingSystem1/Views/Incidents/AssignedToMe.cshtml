@model IEnumerable<CheckingSystem1.Models.Incidents>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span10">
    <br />
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <br />
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Caller)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subcategory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BusinessService)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.state)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.priority)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssignementGroup)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Updatedate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UbdatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssignementTo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @if (User.Identity.Name==item.AssignementTo.Email)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Caller.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        @foreach (var subcat in ViewBag.subcatlist)
                        {
                            if (subcat.IdSubCat.ToString() == item.Subcategory)
                            {
                                item.Subcategory = subcat.Name;
                            }
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.Subcategory)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BusinessService)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.state)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.priority)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AssignementGroup)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Updatedate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UbdatedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AssignementTo.FirstName)
                        </td>
                        <td align="center">
                            <a asp-action="Edit" asp-route-id="@item.IdInc"><i class="icon-edit"></i></a>

                            <a asp-action="Delete" asp-route-id="@item.IdInc" ><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>