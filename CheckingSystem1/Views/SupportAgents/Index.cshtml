@model IEnumerable<CheckingSystem1.Models.SupportAgents>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="span10">
    <br/>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <br/>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td width="25%">
                        <a asp-action="Edit" asp-route-id="@item.IdAgent" class="btn btn-success">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.IdAgent" class="btn btn-info">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdAgent" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>