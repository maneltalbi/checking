@model IEnumerable<CheckingSystem.Models.SubCategories>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span10">
    <br />
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <br />
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th width="25%"><center>
                    @Html.DisplayNameFor(model => model.Name)</center>
                </th>
                <th width="35%"> <center>
                    @Html.DisplayNameFor(model => model.Category)</center>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><center>
                        @Html.DisplayFor(modelItem => item.Name)</center>
                    </td>
                    <td><center>
                        @Html.DisplayFor(modelItem => item.Category.Name)</center>
                    </td>
                    <td width="35%" align="center">
                        <center>
                            <a asp-action="Edit" asp-route-id="@item.IdSubCat" class="btn btn-success">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.IdSubCat" class="btn btn-info">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.IdSubCat" class="btn btn-danger">Delete</a>
                        </center>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>